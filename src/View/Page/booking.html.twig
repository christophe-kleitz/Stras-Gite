{% extends 'layout.html.twig' %}

{% block title %}
Réserver chez Stras'Gîte | {{ parent() }}
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="../assets/css/Login-Form-Clean.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
{% endblock %}

{% block content %}
<div class="login-clean">
    <form method="post" action="../User/summary">
        <h1 class="text-center">Réservation</h1>
        <small style="visibility:hidden" class="form-text text-muted">Help text for a form field.</small>
        <div class="form-group">
            <label for="arrival"> Arrivée </label>
            <input class="form-control" type="date" id="arrival" name="arrival"
                value="" min="{{ minDate }}" max="{{ maxDate }}" required>
        </div>
        <div class="form-group">
            <label for="departure"> Arrivée </label>
            <input class="form-control" type="date" id="departure" name="departure"
                value="" min="{{ minDate }}" max="{{ maxDate }}" required>
        </div>
        <div class="form-group">
        {# fourrer une condition: si le client vient d'une chambre le choix est déjà fait  #}
            <label for="room">Choix de la chambre</label>
            <select class="form-control" name="roomSelect" id="room" required>
                <option value="">--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="guest">Nombre de personnes</label>
            <select class="form-control" name="guestSelect" id="guest" required>
                <option value="">--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>        
        </div>
        <div class="form-group">
            <label for="childGuest">Nombre d'enfants</label>
            <select class="form-control" name="childGuestSelect" id="childGuest" required>
                <option value="">--</option>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>        
        </div>
        <div class="form-group">
            <button class="btn btn-light active btn-block" type="submit" name="checkout">Accéder à mon récapitulatif</button>
        </div>
        <a class="forgot" style="visibility:hidden" href="#">Mot de passe oublié ?</a>
    </form>
</div>
{% endblock %}
