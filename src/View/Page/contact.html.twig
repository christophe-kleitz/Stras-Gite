{% extends 'layout.html.twig' %}

{% block title %}
    Nous contacter - {{ parent() }}
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="/assets/css/style_form.css">
{% endblock %}

{% block content %}

    <div class="contact container-fluid">
        <form class="form">
            <h1>Nous contacter</h1>
            <div class="form-row">
                <div class="form-group col-lg-6 col-md-6">
                    <label for="lastname">Nom</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Nom">
                </div>
                <div class="form-group col-lg-6 col-md-6">
                    <label for="firstname">Prénom</label>
                    <input type="text" class="form-control" id="firstname" placeholder="Prénom">
                </div>
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" class="form-control" id="email" placeholder="name@email.com">
            </div>
            <div class="form-group">
                <label for="message">Your message:</label>
                <textarea class="form-control" id="message" rows="5" placeholder="Entrer votre message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer votre message</button>
        </form>
    </div>



{% endblock %}